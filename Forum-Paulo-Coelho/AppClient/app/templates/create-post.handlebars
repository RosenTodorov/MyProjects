<form class="form-horizontal">
    <div class="page-header">
        <h1 class="form-title">
            Create Post
        </h1>
    </div>
    <div class="form-group">
        <label for="content-post-box" class="col-sm-2 control-label">Content:</label>
        <div class="col-sm-5">
            <textarea class="form-control" id="content-post-box" placeholder="Post content here...."></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a href="#/posts/{{thread}}" type="submit" id="btn-post" class="btn btn-default">Add</a>
        </div>
    </div>
</form>