<Window x:Class="CinemaBookingSystem.MovieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MovieWindow" Height="510" Width="765" WindowStartupLocation="CenterScreen">
    <Grid Width="765" Height="510" Background="Black">


        <Image x:Name="MovieImage" Source="Images\Movies\Despicable me.jpg" Stretch="Fill" HorizontalAlignment="Left" Height="290" Margin="26,79,0,0" VerticalAlignment="Top" Width="220"/>
        <Label x:Name="MovieLabel" Content="Movie name" HorizontalAlignment="Left" Height="29" Margin="26,32,0,0" VerticalAlignment="Top" Width="249" Foreground="White" FontFamily="Cambria" FontSize="20" FontWeight="Bold"/>
        <TextBlock x:Name="movieInfo"  HorizontalAlignment="Left" Height="290" Margin="368,79,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="316" Foreground="White" FontFamily="Cambria" FontSize="16"/>

    </Grid>
</Window>
