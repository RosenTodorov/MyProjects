        public Show(CinemaHall hall, Movie movie, DayOfWeek date, Time time)
        {
            this.Hall = hall;
            this.Movie = movie;
            this.seatReserved = new bool[Hall.Rows, Hall.Seats];
            this.Date = date;
            this.Time = time;
        }
        
